{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    {
      "src": "**/*.{html,js,css,png,jpg,svg,ico,webp,woff,woff2,ttf,eot}",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)",      "dest": "/$1" }
  ],
  "env": {
    "JWT_SECRET": "@jwt_secret"
  }
}
